mixin offcanvas-header
    .offcanvas-header
        block

mixin offcanvas-body
    .offcanvas-body&attributes(attributes)
        block

mixin offcanvas(side="start", targetId)
    .offcanvas(class="offcanvas-"+side, id=targetId, tabindex="-1", aria-labelledby=targetId)
        block


mixin btn-close 
    button.btn-close(type="button", data-bs-dismiss="offcanvas", aria-label="close")
        block
